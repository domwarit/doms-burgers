div class="container">
  <div class="row" id="top-bar">
    <div class="col-xs-12 text-center">
      <h1>Eat Da Burgers</h1>
    </div>
  </div>
    <div class="row">
      <div class="col">
        {{#each burgers}}
        {{#unless this.devoured}}
           <form class="devour-form button-size">
              <span class="burgerList">{{this.id}}. {{this.name}}</span>
              <input type="hidden" class="burger_id" type="text" data-devoured={{this.devoured}} value={{this.id}}>
              <button type="submit" class="btn btn-danger">Devour it!</button>
           </form>
        {{/unless}}
        {{/each}}
      </div>
      <div class="col">
        {{#each burgers}}
          {{#if this.devoured}}
            <input class="form control" type="text" placeholder="{{this.id}}. {{this.name}}" readonly>
          {{/if}}
        {{/each}}
      </div>
    </div>
</div>
<div class="container" id="createBurger">
  <div class="row"> 
    <div class="col-xs-12 text-center enter_section">
        <form class="create-form">
          <input size=100 type="text" name="burger_name" class="form-control" value="" id="enter_text" data-devoured="false">
          <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
        </form>
        <p>Enter in a burger you would like to eat!</p>
    </div>
  </div>
</div>